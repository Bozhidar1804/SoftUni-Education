@using Practice.Models.Product;
@model IEnumerable<ProductViewModel>

@{
	ViewData["Title"] = "All Products";
}


<div class="container-fluid">
	
	<div class="row row-cols-4" style="margin-bottom: 5px">

		<form asp-controller="Product" asp-action="My-Products" method="get">
			<div class="input-group">
				<input type="search" name="keyword" class="form-control rounded" placeholder="Search" arial-label="Search"/>
				<button type="submit" for="keyword" class="btn btn-outline-primary">Search</button>
			</div>
		</form>

	</div>

    <div class="card" style="width: 18rem;">
	<div class="card-header">@ViewData["Title"]</div>
	<ul class="list-group list-group-flush">
		@foreach(var product in Model)
		{
			<li class="list-group-item">
				N.@product.Id: @product.Name - @product.Price lv.
			</li>
		}
	</ul>
</div>
